    "containerType": "DEFAULT",
    "dataSource": {
      "dataSetType": "DIR",
      "id": "a2021",
      "schema": "http://www.europeana.eu/schemas/ese/ESE-V3.4.xsd",
      "namespace": "http://www.europeana.eu/schemas/ese/",
      "description": "NONE",
      "metadataFormat": "ese",
      "isSample": false,
      "exportDir": "/data/repoxData/export/a2021",
      "recordIdPolicy": {
        "IdGenerated": {}
      },
      "sourcesDirPath": "",
      "recordXPath": "/rec",
      "retrieveStrategy": {
        "FTP": {
          "server": "valid.server.host.example",
